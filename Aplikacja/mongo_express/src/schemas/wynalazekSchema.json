{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Wynalazek",
    "type": "object",
    "required": ["nazwa", "rok", "twórca_id", "czy_używany", "zastosowania", "historia"],
    "properties": {
      "nazwa": {
        "type": "string",
        "minLength": 3,
        "maxLength": 100,
        "pattern": "^[A-Za-ząćęłńóśźżĄĆĘŁŃÓŚŹŻ ]+$"
      },
      "rok": {
        "type": "integer",
        "minimum": 1000,
        "maximum": 2100
      },
      "twórca_id": {
        "type": "string",
        "pattern": "^[0-9a-fA-F]{24}$",
        "description": "MongoDB ObjectId w formacie hex"
      },
      "czy_używany": {
        "type": "boolean"
      },
      "zastosowania": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 2
        }
      },
      "historia": {
        "type": "object",
        "required": ["pierwsze_publiczne_demonstracje", "wprowadzenie_na_rynek"],
        "properties": {
          "pierwsze_publiczne_demonstracje": {
            "type": "integer",
            "minimum": 1000
          },
          "wprowadzenie_na_rynek": {
            "type": "integer",
            "minimum": 1000
          }
        }
      }
    }
  }