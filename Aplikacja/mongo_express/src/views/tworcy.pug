extends layout

block content
  h1 Lista Twórców 🧪
  p Tutaj znajdziesz twórców, którzy w znaczący sposób przyczynili się do rozwoju różnych dziedzin.

  div.buttons-holder
    a(href='/tworcy/add' class='add-button') Dodaj Nowego Twórcę
    form(action='/tworcy', method='get' class='form-align')
      select(name='sort' class='select-button')
        option(value='imie') Imię
        option(value='nazwisko') Nazwisko
        option(value='dataUrodzenia') Data urodzenia
      select(name='order' class='select-button')
        option(value='asc') Rosnąco
        option(value='desc') Malejąco
      button(type='submit' class='add-button') Sortuj

  div.center-content
    div(class='table-container')
      table(class='wynalazki-table')
        thead
          tr(class="column-names")
            th Imię i Nazwisko
            th Narodowość
            th Data Urodzenia
            th Wiek
            th Ma Nobla?
            th Czy Żyje?
            th Akcje
        tbody
          each tworca in tworcy
            tr
              td 
                a(href=`/tworcy/${tworca._id}`)= `${tworca.imie} ${tworca.nazwisko}`
              td= tworca.narodowosc
              td= new Date(tworca.dataUrodzenia).toLocaleDateString('pl-PL')
              td= tworca.wiek
              td= tworca.nagrody.nobel ? 'Tak' : 'Nie'
              td= tworca.czy_zyje ? 'Tak' : 'Nie'
              td.actions
                a.button.small(href=`/tworcy/edit/${tworca._id}`) Edytuj
                form(action=`/tworcy/${tworca._id}?_method=DELETE` method='POST')
                  button.button.small.danger(type='submit') Usuń
